{
  "settings": {
    "analysis": {
      "tokenizer": {
        "bigram": {
          "type": "ngram",
          "min_gram": "2",
          "max_gram": "2"
        }
      },
      "analyzer": {
        "bigram_analyzer": {
          "tokenizer": "bigram",
          "filter": [
            "asciifolding",
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties" : {
      "subject" : {
        "type" : "text"
      },
      "content" : {
        "type" : "text",
        "analyzer": "bigram_analyzer"
      }
    }
  }
}
